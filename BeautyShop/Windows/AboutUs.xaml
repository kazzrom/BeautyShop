<Window x:Class="BeautyShop.Windows.AboutUs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautyShop.Windows"
        mc:Ignorable="d"
        Title="AboutUs" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10">
            <TextBlock Text="Салон красоты «BeautyShop»"
                       Style="{StaticResource TextBlockTitleBold}" />
            <TextBlock Text="Контакты: +793849234823"
                       Margin="0 10 0 0"
                       Style="{StaticResource TextBlockSubTitle}" />
            <TextBlock Text="Местоположение: Россия, г. Нефтекамск, Заслонова ул., д. 19 кв.171"
                       TextWrapping="Wrap"
                       Margin="0 10 0 0"
                       Style="{StaticResource TextBlockSubTitle}" />
        </StackPanel>
    </Grid>
</Window>
