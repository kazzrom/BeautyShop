<Page x:Class="BeautyShop.Pages.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BeautyShop.Pages"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:vm="clr-namespace:BeautyShop.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="SignInPage">
    <Page.DataContext>
        <vm:SignInViewModel />
    </Page.DataContext>
    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="200">
        <TextBlock Text="Войти в аккаунт" 
                   Style="{StaticResource TextBlockTitleBold}"
                   Margin="0 0 0 40"/>
        <hc:TextBox hc:InfoElement.Title="Почта"
                    Text="{Binding Email}"/>
        <Button Content="Войти" 
                Style="{StaticResource ButtonPrimary}"
                Margin="0 20 0 0"
                Command="{Binding LoginCommand}"/>
    </StackPanel>
</Page>
